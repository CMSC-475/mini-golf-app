<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiniGolfApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#2BBF59</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">#000000</item>
        <!--<item name="android:backgroundTint">@color/cream_background</item>-->

        <!-- for input boxes -->
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">@color/green_primary</item>
        <item name="colorControlHighlight">@color/green_primary</item>

    </style>
</resources>